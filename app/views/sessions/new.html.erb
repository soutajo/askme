<div class="container">
  <h2 class="title">Login</h2>

  <p class="mt">Enter your email and password to log in</p>

  <div class="mt">
    <%= form_with scope: :session, url: session_path, data: {turbo: false} do |form| %>
      <p><%= form.label :email %></p>
      <p><%= form.text_field :email, class: 'form-text-field' %></p>

      <p class="mt"><%= form.label :password %></p>
      <p><%= form.password_field :password %></p>

      <p class="mt-lg"><%= form.submit 'Sign in', class: 'button button-main' %></p>
    <% end %>
  </div>
</div>